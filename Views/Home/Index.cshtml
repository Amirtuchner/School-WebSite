<section class="hero hero-coded">
    <div class="hero-bg-overlay"></div>

    <div class="container hero-inner">
        <span class="hero-label" data-i18n="heroLabel"></span>

        <h1 class="hero-title">
            <span data-i18n="heroTitleLine1"></span><br />
            <span data-i18n="heroTitleLine2"></span>
        </h1>

        <p class="hero-subtitle" data-i18n="heroSubtitle"></p>

        <div class="hero-actions">
            <a href="#" class="btn btn-primary" data-i18n="heroBtnPrimary"></a>
            <a href="#" class="btn btn-outline hero-secondary-btn" data-i18n="heroBtnSecondary"></a>
        </div>
    </div>
</section>


<section class="hero-podcast-full">
    <!-- main wide podcast image -->
    <img src="images/hero-podcast.png" alt="Hero Podcast Image" class="hero-podcast-img">

    <!-- left floating card: Enhance Your Career -->
    <div class="hero-card hero-card-left">
        <img src="images/Enhance your career.png" alt="Enhance Your Career">
    </div>

    <!-- right floating card: Courses are Rated -->
    <div class="hero-card hero-card-right">
        <img src="images/Courses are rated.png" alt="Courses are Rated Excellent 4.9/5">
    </div>
</section>



<!-- COURSE CATEGORIES SECTION (the big dark card) -->

    <div class="container">
        <img src="images/Course categories.png" alt="Course Categories" class="courses-img">
    </div>
</section> *@


<section class="section section-courses">
    <div class="container courses-card">
        <div class="courses-header">
            <div class="courses-left">
                <span class="section-kicker" data-i18n="coursesKicker"></span>
                <h2 class="courses-title" data-i18n="coursesTitle"></h2>
            </div>

            <div class="courses-right">
                <p class="courses-subtitle" data-i18n="coursesSubtitle"></p>
                <a href="#" class="btn btn-primary courses-cta" data-i18n="coursesCta"></a>
            </div>
        </div>

        <div class="courses-grid">
            <!-- Card 1 -->
            <article class="course-category">
                <div class="category-icon">💻</div>
                <h3 class="category-title" data-i18n="cat1Title"></h3>
                <p class="category-desc" data-i18n="cat1Desc"></p>
                <span class="category-meta" data-i18n="cat1Meta"></span>
            </article>

            <!-- Card 2 (active) -->
            <article class="course-category course-category--active">
                <div class="category-icon">📱</div>
                <h3 class="category-title" data-i18n="cat2Title"></h3>
                <p class="category-desc" data-i18n="cat2Desc"></p>
                <span class="category-meta" data-i18n="cat2Meta"></span>
            </article>

            <!-- Card 3 -->
            <article class="course-category">
                <div class="category-icon">🤖</div>
                <h3 class="category-title" data-i18n="cat3Title"></h3>
                <p class="category-desc" data-i18n="cat3Desc"></p>
                <span class="category-meta" data-i18n="cat3Meta"></span>
            </article>

            <!-- Card 4 -->
            <article class="course-category">
                <div class="category-icon">☁️</div>
                <h3 class="category-title" data-i18n="cat4Title"></h3>
                <p class="category-desc" data-i18n="cat4Desc"></p>
                <span class="category-meta" data-i18n="cat4Meta"></span>
            </article>
        </div>
    </div>
</section>

